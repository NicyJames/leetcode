class Solution {
public:
    vector<bool> kidsWithCandies(vector<int>& candies, int extraCandies) {
        vector<bool> result;
        int maximum=0;
        for(int i=0;i<candies.size();i++)
        {
            maximum=max(candies[i],maximum);
        }
        for(int i=0;i<candies.size();i++)
        {
           if(candies[i]+extraCandies>=maximum)
            {
                result.push_back(1);
            }
            else 
            result.push_back(0);
           
        }return result;
    }
};
